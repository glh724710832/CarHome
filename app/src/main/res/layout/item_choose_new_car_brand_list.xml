<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_choose_new_car_brand_list_firstletter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="8dp"
        android:text="A"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_choose_new_car_brand_list_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-15dp"
        android:layout_toLeftOf="@id/switch_choose_new_car_brand_list"
        android:padding="8dp"
        android:text="只看在售"
        android:textColor="@color/black" />

    <Switch
        android:id="@+id/switch_choose_new_car_brand_list"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentRight="true"
        android:checked="false"
        android:textColor="@color/black"
       />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_choose_new_car_brand_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_choose_new_car_brand_list_firstletter"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp" />
</RelativeLayout>